{
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/shop",
            "has": [
                {
                    "type": "query",
                    "key": "collection"
                }
            ],
            "destination": "/api/seo"
        },
        {
            "source": "/product/:handle",
            "destination": "/api/seo"
        },
        {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
        }
    ]
}